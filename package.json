{
  "name": "YourThemeName",
  "version": "1.0.0",
  "description": "This project offers a useful starting point development of a theme for [Orchard](http://www.orchardproject.net/).",
  "author": "Moov2",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.1",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.5",
    "extract-text-webpack-plugin": "^3.0.0",
    "hashmark": "^5.0.0",
    "karma": "^1.7.0",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "load-grunt-tasks": "3.3.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.5.3",
    "normalize.css": "3.0.3",
    "postcss-loader": "^2.0.6",
    "replace-in-file": "^2.6.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "sinon": "^3.2.1",
    "standard": "^10.0.3",
    "webpack": "^3.5.5",
    "webpack-node-externals": "^1.6.0",
    "@songkick/replaceinfiles": "^1.1.6"
  },
  "scripts": {
    "clean": "rimraf dist",
    "copy": "copyfiles Placement.info Theme.png Theme.txt **/*Web.config Content/**/* Styles/Site.css Scripts/bundle.js Views/*.cshtml dist",
    "css:hash": "hashmark -c dist -r -l 8 ./Styles/Site.css '{dir}/{name}.{hash}.{ext}' | replaceinfiles -s './dist/Views/Document.cshtml' -d '{dir}/{base}' -S",
    "js:hash": "hashmark -c dist -r -l 8 ./Scripts/bundle.js '{dir}/{name}.{hash}.{ext}' | replaceinfiles -s './dist/Views/Document.cshtml' -d '{dir}/{base}' -S",
    "bundle": "webpack -d",
    "bundle:dist": "webpack -p",
    "bundle:watch": "webpack -d --watch",
    "dist": "npm run clean && npm run bundle:dist && npm run copy && npm run css:hash && npm run js:hash",
    "develop": "npm run bundle",
    "test": "npm run bundle && karma start karma.conf.js",
    "lint": "standard"
  },
  "standard": {
    "globals": [
      "suite",
      "test",
      "assert",
      "sinon",
      "setup"
    ]
  }
}
